{
  "name": "@chubbyts/chubbyts-eslint",
  "type": "module",
  "version": "2.0.0",
  "description": "ESLint Configuration for chubbyts libraries / framework / projects.",
  "keywords": [
    "chubbyts",
    "eslint"
  ],
  "author": "Dominik Zogg",
  "license": "MIT",
  "repository": "chubbyts/chubbyts-eslint",
  "scripts": {
    "build": "rm -Rf dist && tsc -b ./tsconfig.cjs.json ./tsconfig.esm.json ./tsconfig.types.json",
    "cs-fix": "prettier --write eslintrc.ts",
    "cs": "prettier --check eslintrc.ts",
    "prepare": "npm run build"
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "files": [
    "dist"
  ],
  "exports": {
    "./*": {
      "types": "./dist/types/*.d.ts",
      "require": "./dist/cjs/*.js",
      "import": "./dist/esm/*.js",
      "default": "./dist/esm/*.js"
    }
  },
  "engines": {
    "node": ">=16"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "eslint": "^8.45.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-functional": "^5.0.8",
    "eslint-plugin-import": "^2.27.5"
  },
  "devDependencies": {
    "prettier": "^3.0.0",
    "typescript": "^5.1.6"
  },
  "publishConfig": {
    "access": "public"
  }
}
